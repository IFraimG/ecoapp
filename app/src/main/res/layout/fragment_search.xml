<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".SearchFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="20dp">

        <TextView
            android:id="@+id/search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Поиск"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="28sp"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/search_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="12dp"
            android:elevation="0dp"
            app:cardBackgroundColor="@color/background_search"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingEnd="16dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/search_bar_hint_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search"
                    android:layout_margin="8dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/search_bar_edit_text"
                    android:layout_width="0dp"
                    android:hint="Мероприятия, гайды"
                    android:textSize="20dp"
                    android:textColorHint="@color/home_titles_gray"
                    android:fontFamily="@font/montserrat_regular"
                    android:backgroundTint="@color/background_search"
                    android:background="@color/background_search"
                    android:inputType="textCapWords"
                    android:layout_weight="1"
                    android:layout_height="48dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</FrameLayout>
