<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background_gray"
    tools:context=".fragments.EventFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

                <ImageButton
                    android:id="@+id/the_event_return_button"
                    android:contentDescription="back"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/baseline_arrow_back_24"
                    />

            <TextView
                android:id="@+id/the_event_title"
                android:layout_width="wrap_content"
                android:maxWidth="270dp"
                android:id="@+id/event_title"
                android:gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:text="Уборка пляжа Солнечный"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="28sp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="-46dp"
                />

            <ImageView
                android:id="@+id/event_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:maxHeight="400dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/event_image"/>

            <TextView
                android:id="@+id/the_event_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:text="31.05.2024"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/text_gray"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/the_event_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:text="12:00"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/text_gray"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/the_event_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:ellipsize="end"
                android:text="Городской пляж нуждается в вашей помощи. Потребуется убрать мусор на суше и в воде."
                android:fontFamily="@font/montserrat_medium"
                android:textColor="@color/text_gray"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal" />

            <androidx.cardview.widget.CardView
                android:id="@+id/choose_place_card_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                app:cardElevation="0dp"
                android:elevation="0dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="16dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/the_event_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Москва г., городской пляж Солнечный"
                        android:textColor="@color/home_titles_gray"
                        android:textSize="20sp"
                        android:paddingRight="12dp"
                        android:paddingLeft="12dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/the_event_address">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="12dp"
                            android:src="@drawable/map_illustration"/>

                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            app:cardElevation="30dp"
                            android:elevation="50dp"
                            app:cardCornerRadius="24dp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">
                                <TextView
                                    android:id="@+id/the_event_view_map"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Посмотреть на карте"
                                    android:textColor="#898A8D"
                                    android:textSize="16sp"
                                    android:fontFamily="@font/montserrat_light"
                                    android:layout_margin="20dp"/>

                            </LinearLayout>
                        </androidx.cardview.widget.CardView>
                    </FrameLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/the_event_award_points"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:maxWidth="200dp"
                android:ellipsize="end"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/text_gray"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:id="@+id/the_event_current_people_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:maxWidth="150dp"
                android:ellipsize="end"
                android:text="Участники: 3 / 5"
                android:fontFamily="@font/montserrat_bold"
                android:textColor="@color/text_gray"
                android:textSize="20sp"
                android:layout_gravity="center_horizontal"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/take_part_in_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_light"
                android:text="Стать участником"
                android:elevation="0dp"
                android:background="@drawable/green_rounded_button"
                android:stateListAnimator="@null"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/refuse_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="50dp"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:fontFamily="@font/montserrat_light"
                android:text="Не участвовать"
                android:elevation="0dp"
                android:backgroundTint="@color/home_titles_gray"
                android:background="@drawable/green_rounded_button"
                android:visibility="gone"
                android:stateListAnimator="@null"/>
        </LinearLayout>
    </ScrollView>
</FrameLayout>