<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:stateListAnimator">@null</item>
        <item name="itemHorizontalTranslationEnabled">false</item>
        <item name="itemBackground">@color/white</item>
    </style>

    <style name="LightThemeRadioButtonStyle">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DarkThemeRadioButtonStyle">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="GreenThemeRadioButtonStyle">
        <item name="android:button">@android:color/transparent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primaryColorDark</item>
        <!-- Другие атрибуты стиля для темной темы -->
    </style>

    <style name="AppThemeGreen" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primaryColorGreen</item>
        <!-- Другие атрибуты стиля для зеленой темы -->
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primaryColorLight</item>
        <!-- Другие атрибуты стиля для светлой темы -->
    </style>

</resources>